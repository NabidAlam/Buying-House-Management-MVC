<div class="panel panel-primary panel-bordered">
    <div class="panel-heading">
        <h5 class="panel-title">Order Information Factory Wise Report</h5>
    </div>
    <div class="panel-body">

        @Html.AntiForgeryToken()
        @using (Html.BeginForm("OrderInfoFactoryWise", "Report", FormMethod.Post, htmlAttributes: new { @target = "_blank" }))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    @*<div class="form-group">
                            @Html.Label("Month", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DropDownList("Months", null, "--Select--", htmlAttributes: new { @id = "Months", @class = "form-control select2", @style = "!important" })
                                <span class="error" id="Months_Error"></span>
                            </div>
                        </div>*@

                    <div class="form-group">
                        @Html.Label("Factory", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownList("SupplierId", null, "--Select--", htmlAttributes: new { @id = "SupplierId", @class = "form-control select2", @style = "!important" })
                            <span class="error" id="SupplierId_Error"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Date", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBox("date", NullHelpers.DateToString(DateTime.Now), new { @class = "form-control datepicker", @id = "date" })
                            <span class="error" id="Year_Error"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <button type="submit" class="btn btn-primary" id="generateReport"><i class="icon-add position-left"></i>Generate Report</button>
                </div>
            </div>
        }

    </div>


</div>

    <script>
        $(document).ready(function () {
            $(".select2").select2();

            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                todayHighlight: true,
                todayBtn: true,
                autoclose: true
            });
        });
    </script>
