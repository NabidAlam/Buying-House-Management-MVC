@using BHMS.Helpers
@{
    ViewBag.Title = "Total Export Value & RSL Commissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="panel panel-primary panel-bordered">
    <div class="panel-heading">
        <h5 class="panel-title">Customer Wise Sales Report</h5>
    </div>
    <div class="panel-body">

        @Html.AntiForgeryToken()
        @using (Html.BeginForm("TotalExRSLComm", "Report", FormMethod.Post, htmlAttributes: new { @target = "_blank" }))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">


                    <div class="form-group">
                        @Html.Label("Date", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBox("date", DateTime.Today.Year, new { @class = "form-control datepicker", @id = "date" })
                            <span class="error" id="Year_Error"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <button type="submit" class="btn btn-primary" id="generateReport"><i class="icon-add position-left"></i>Generate Report</button>
                </div>
            </div>
        }

    </div>
</div>


<script>
    $(document).ready(function () {
        $(".select2").select2();

        $('.datepicker').datepicker({
            format: "yyyy",
            viewMode: "years",
            minViewMode: "years",
            todayHighlight: true,
            todayBtn: true,
            autoclose: true
        });


    });
</script>





