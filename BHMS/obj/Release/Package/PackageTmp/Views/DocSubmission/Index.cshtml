@model IEnumerable<BHMS.Models.DocSubmissionMas>
@using BHMS.Helpers
@{
    ViewBag.Title = "Index";
}

<p style="padding-left:5px; padding-top:5px;">
    @Html.ActionLink("Create New", "Create",
          null, new { @style = "color:#ffffff;", id = "lnkCreate", @class = "btn btn-success" })
</p>

<div class="panel panel-primary panel-bordered">
    <div class="panel-heading">
        <h5 class="panel-title">List of Document Submission</h5>
    </div>
    <table class="table datatable-show-all table-hover table-xs">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BuyerInfo.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourierInfo.Name)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.MasterLCInfoMas.LCNo)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.PaymentTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubmissionDate)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.AWBNo)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BuyerInfo.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourierInfo.Name)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.MasterLCInfoMasId)
                    </td>*@
                    <td>
                        @if (item.PaymentTypeId == 0)
                        {
                            <label>LC</label>
                        }
                        else
                        {
                            <label>TT</label>
                        }
                    </td>
                    <td>
                       <label>@NullHelpers.DateToString(item.SubmissionDate)</label>
             
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AWBNo)
                    </td>

                    <td>
                        <ul class="icons-list">
                            <li class="text-info"><a href="@Url.Action("Edit", new { id = item.Id } )" data-popup="tooltip" title="Edit"><i class="icon-pencil7"></i></a></li>
                            <li>|</li>
                            <li class="text-danger"><a href="javascript:deleteFunction(@item.Id)" data-popup="tooltip" title="Delete"><i class="icon-cross2"></i></a></li>
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



@section Scripts {

    <script type="text/javascript" src="~/Scripts/plugins/forms/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/datatables_advanced.js"></script>

    <script>
        function deleteFunction(Id) {
            var Con = confirm("Are you sure want to delete this?");
            if (Con === true) {
                $.ajax({
                    url: "/DocSubmission/DeleteDocSubmission",
                    type: "post",
                    data: {
                        id: Id
                    },
                    dataType: "json",

                    success: function (flag) {
                        //console.log(flag);

                        if (flag.flag === true) {
                            alert("Successfully deleted !");
                            window.location = "/DocSubmission/";
                        } else {
                            alert(flag.message);
                        }

                    },

                    error: function (xhr) {
                        alert('error');

                    }


                });
            }

        }
    </script>


}