@model IEnumerable<BHMS.Models.BankBranch>
@using BHMS.Helpers

@{
    ViewBag.Title = "Branches";
    ViewBag.SubTitle = "Bank";
    BHMS.Models.ModelBHMS db = new BHMS.Models.ModelBHMS();
}

<p style="padding-left:5px; padding-top:5px;">
    @Html.ActionLink("Create New", "Create",
          null, new { @style = "color:#ffffff;", id = "lnkCreate", @class = "btn btn-success" })
</p>

<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">List of Bank Branches</h5>
    </div>
    <div class="panel-body">
        <table class="table datatable-show-all">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchName)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>*@
                    @*<th>
                            @Html.DisplayNameFor(model => model.ContactPerson)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.SwiftCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsForeign)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.IsAuth)
                    </th>*@
                    @*<th>
                        @Html.DisplayNameFor(model => model.OpBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OpOn)
                    </th>*@
                    @*<th>
                            @Html.DisplayNameFor(model => model.AuthBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AuthOn)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.BranchName)*@
                            @Html.ActionLink(item.BranchName, "Details", "BankBranch", new { id = item.Id }, null)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>*@
                        @*<td>
                        @Html.DisplayFor(modelItem => item.ContactPerson)
                    </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.SwiftCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsForeign)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.IsAuth)
                        </td>*@
                        @*<td>
                            @Html.DisplayFor(modelItem => item.OpBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OpOn)
                        </td>*@
                        @*<td>
                        @Html.DisplayFor(modelItem => item.AuthBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthOn)
                    </td>*@
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-xs text-info icon-pencil4", @title = "Edit" })|
                            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-xs text-info  icon-file-text2", @title = "Details" }) |
                            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-xs text-danger icon-cross2", @title = "Delete" })
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>


