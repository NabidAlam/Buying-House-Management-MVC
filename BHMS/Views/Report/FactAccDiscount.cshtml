
@{
    ViewBag.Title = "FactAccDiscount";
}



<div class="panel panel-primary panel-bordered">
    <div class="panel-heading">
        <h5 class="panel-title">Factory Account Discount Report</h5>
    </div>
    <div class="panel-body">

        @Html.AntiForgeryToken()
        @using (Html.BeginForm("FactAccDiscount", "Report", FormMethod.Post, htmlAttributes: new { @target = "_blank" }))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    <div class="form-group">
                        @Html.Label("Factory Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">

                            @Html.DropDownList("SupplierId", null, "", new { @class = "form-control select2", @Id = "BuyerId" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("FromDate", "Date From", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBox("DateFrom", null, new { @class = "form-control datepicker" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("ToDate", "Date To", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBox("DateTo", null, new { @class = "form-control datepicker" })
                        </div>
                    </div>
                </div>
            </div>
        <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <button type="submit" class="btn btn-primary" id="generateReport"><i class="icon-add position-left"></i>Generate Report</button>
                </div>
            </div>
        }

    </div>
</div>


<script>
    $(document).ready(function () {
        $(".select2").select2();

        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            todayHighlight: true,
            todayBtn: true,
            autoclose: true
        });


    });
</script>






