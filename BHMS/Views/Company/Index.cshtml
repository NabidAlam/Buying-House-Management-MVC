@model IEnumerable<BHMS.Models.CompanyInformation>


@{
    ViewBag.Title = "Company";
    //ViewBag.SubTitle = "Buyers";
}

<p style="padding-left:5px; padding-top:5px;">

        @Html.ActionLink("Create New", "Create",
          null, new { @style = "color:#ffffff;", id = "lnkCreate" ,@class="btn btn-success"})
   
</p>

<div class="panel panel-primary panel-bordered">
    <div class="panel-heading">
        <h5 class="panel-title">List of Companies</h5>
    </div>
    <div class="panel-body">
        <table class="table datatable-show-all">
            <thead>

                <tr>
                    <th class="col-lg-1 col-lg-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>*@
                    <th  class="col-lg-1 col-lg-2">
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th  class="col-lg-1 col-lg-3">
                        @Html.DisplayNameFor(model => model.Web)
                    </th>
                    @*<th  class="col-lg-1 col-lg-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>*@
                    @*<th>
                        @Html.DisplayNameFor(model => model.ContactPerson)
                    </th>*@
                    @*<th  class="col-lg-1 col-lg-1">
                        @Html.DisplayNameFor(model => model.IsAuth)
                    </th>*@
                    @*<th>
                        @Html.DisplayNameFor(model => model.OpBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OpOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AuthBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AuthOn)
                    </th>*@
                    <th  class="col-lg-1 col-lg-4"></th>
                </tr>
                </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.Name)*@
                            @Html.ActionLink(item.Name, "Details", "Company", new { id = item.Id }, null)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Web)
